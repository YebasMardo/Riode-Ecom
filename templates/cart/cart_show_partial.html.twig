{% for item in cart %}
	<tr>
		<td class="product-thumbnail">
			{% for image in item.images|slice(0, 1) %}
				<figure>
					<a href="product-simple.html">
						<img src="{{ vich_uploader_asset(image, 'imageFile') }}" width="100" height="100" alt="product">
					</a>
				</figure>
			{% endfor %}
		</td>
		<td class="product-name">
			<div class="product-name-section">
				<a href="product-simple.html">{{ item.title }}</a>
			</div>
		</td>
		<td class="product-subtotal">
			<span class="amount">${{item.price}}</span>
		</td>
		<td class="product-quantity">
			<div class="input-group">
				<button class="quantity-minus d-icon-minus"></button>
				<input class=" form-control" type="number" min="1" max="1000000" value="{{item.quantity}}">
				<button class="quantity-plus d-icon-plus"></button>
			</div>
		</td>
		<td class="product-price">
			<span class="amount">${{item.price * item.quantity}}</span>
		</td>
		<td class="product-close">
			<a href="#" class="product-remove delete-cart" data-id="{{ item.id }}" title="Remove this product">
				<i class="fas fa-times"></i>
			</a>
		</td>
	</tr>
{% endfor %}
